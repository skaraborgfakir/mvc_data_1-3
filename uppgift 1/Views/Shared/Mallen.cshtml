@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

<html lang="sv">
    <head>
	<meta http-equiv="content-security-policy"
	      content="base-uri 'self';
			  script-src 'self';" />
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - MVC med registerfunktionalitet</title>
	<link rel="stylesheet" type="text/css" href="@Url.Content("~/lib/bootstrap/css/bootstrap.css")" />
	<link rel="stylesheet" type="text/css" href="@Url.Content("~/css/site.css")" />
    </head>
    <body>
	<header>
	    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark  bg-dark  border-bottom box-shadow mb-3">
		<div class="container">
		    <a class="navbar-brand" asp-controller="Home" asp-action="Index" asp-area="">MVC_med_registerfunktionalitet_1</a>
		    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		    </button>
		    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
			<ul class="navbar-nav flex-grow-1">
			    <li class="nav-item">
				<a class="nav-link text-light" asp-controller="Home"   asp-action="Index"   asp-area="">Home</a>
			    </li>
			    <li class="nav-item">
				<a class="nav-link text-light" asp-controller="People" asp-action="Index"   asp-area="">Kartoteket</a>
			    </li>
			    <li class="nav-item">
				<a class="nav-link text-light" asp-controller="Home"   asp-action="Privacy" asp-area="">Privacy</a>
			    </li>
			</ul>
		    </div>
		</div>
	    </nav>
	</header>
	<div class="container">
	    <!-- dags för själva jobbet. Härifrån inkluderas en kontrollants vyer  -->
	    <main role="main" class="pb-3">
		@RenderBody()
	    </main>
	</div>
	<footer class="border-top footer text-muted">
	    <div class="container">
		<div>
		    &copy; MVC_med_registerfunktionalitet_1 - Stefan Skoglund @DateTime.Now.ToString("D") - <a asp-controller="Home" asp-action="Privacy" asp-area="">Privacy</a>
		</div>
		<!-- https://dotnettutorials.net/lesson/asp-net-core-appsettings-json-file/ -->
		<!-- https://stackoverflow.com/questions/47296541/access-configuration-from-a-view-in-asp-net-core/47297327 -->
		<div>
		    uppgifter fån appsettings*.json: version av programmet: @Configuration["programversion"]
		</div>
		<div>
		    och dess  driftmiljö: @Configuration["app_run_miljö"]
		</div>
	</footer>
	<!--
	     en liten svårighet:
	     vad bör placeras i wwwroot/lib vs wwwroot/js ?
	     min läsning av skillnaden är att wwwroot/lib ska kunna genereras automatiskt igenom direkt hämtning och expansion
	     av olika moduler (bootstrap, jquery etc) medans js kan ha samma innehåll men får vara statiskt dvs
	     garanteras från git

	     innehåll i wwwroot/js/ först, därefter wwwroot/lib/etc
	-->
	<script type="text/javascript" charset="utf8" src="@Url.Content("/lib/jquery/jquery.js")"></script>
	<script type="text/javascript" charset="utf8" src="@Url.Content("/lib/popper.js/umd/popper.js")"></script>
	<script type="text/javascript" charset="utf8" src="@Url.Content("/lib/bootstrap/js/bootstrap.js")"></script>

	<!-- möjlighet att från exv People/Index.cshtml få med ett eget script ( section Scripts ) -->
	@await RenderSectionAsync("Scripts", required: false)
    </body>
</html>

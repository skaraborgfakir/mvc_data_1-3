      <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.js"></script>
      <script type="text/javascript" src="~/js/mdb5/mdb.min.js"></script>

      <!-- möjlighet att från exv People/Index.cshtml få med ett eget script ( section Scripts ) -->

<!-- ersättning med div för en tabell -->
<!-- används för uppräkningen av personer -->
<!-- klistras av in av funktioner i ajaxkortfunktioner.js -->

@using System
@using System.Collections.Generic

@using Kartotek.Modeller.Vyer
@using Kartotek.Modeller.Entiteter

@model Kartotek.Modeller.Vyer.PeopleViewModel

<!-- dataTable använder INTE något annat än table, så fixa sortering själv via jquery/javaScript är av nöd  -->
<!-- därav sorteraTabell för namn och bostadsort -->
<div id="personindex_div" class="table-responsive container">
    <!-- tabell med existerande kort -->
    <div class="row">
	<div class="col-md-2 text-start sorting" onClick="sorteraefternamn()"       id="sorteraefternamn">Namn</div>
	<div class="col-md-2 text-start sorting" onClick="sorteraefterbostadsort()" id="sorteraefterbostadsort">Bostadsort</div>
	<div class="col-md-2 text-start">Telefon</div>
	<div class="col-md-1 text-start">Id</div>
	<div class="col-md-2">Aktioner</div>
    </div>
    <!-- sorteras av js/sorteratabell.js därav onClick i tabellhuvudet -->
    <!-- personobjektorienterad -->
    <div id="enumreringajax">
	@foreach (Person item in Model.Utdraget)
	{
	<partial name="aktivlistan/aktivlistan_specifikt_kort" model="item" />
	}
    </div>
</div>

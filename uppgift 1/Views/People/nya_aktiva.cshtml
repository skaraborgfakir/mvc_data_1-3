@model Kartotek.Modeller.Vyer.CreatePersonViewModell

<div class="container">
    <h4 class="text-start">
	Inrapportering av nya aktiva
    </h4>
    <form id="nya_aktiva" method="post" asp-controller="People" asp-action="nyttkort">
	<div class="row mb-1">
	    <label class="nya_aktiva_label text-start col-sm-2 col-form-label" asp-for="Namn">
		Namn
	    </label>
	    <div class="col-sm-4">
		<input id="nyttkort_namn" class="form-control" asp-for="Namn" />
	    </div>
	</div>
